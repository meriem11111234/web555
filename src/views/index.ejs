<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plateforme de Planification de Réunions</title>
    <link rel="stylesheet" href="/styles.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
   >
  </head>
  <body>
    <!-- Accueil -->
    <div class="background">
      <div class="container">
        <% if (page === 'home') { %>
        <h1>Bienvenue sur la plateforme de planification de réunions</h1>
        <% if (user) { %>
        <p>Connecté en tant que <%= user.email %> (<%= user.role %>)</p>
        <a href="/dashboard" class="button">Aller au tableau de bord</a>
        <a href="/logout" class="button">Déconnexion</a>
        <% } else { %>
        <div class="button-container">
          <a href="/login" class="button">Se connecter</a>
          <a href="/register" class="button">S'inscrire</a>
        </div>
        <% } %> <% } %>

        <!-- Connexion -->
        <% if (page === 'login') { %>
        <h2>Connexion</h2>
        <% if (error) { %>
        <p class="error-message"><%= error %></p>
        <% } %>
        <form action="/login" method="POST" class="form-container">
          <input type="email" name="email" placeholder="Email" required class="input-field">
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            required
            class="input-field"
         >
          <button type="submit" class="button">Se connecter</button>
        </form>
        <p>Pas encore inscrit ? <a href="/register">Inscrivez-vous ici</a></p>
        <% } %>

        <!-- Inscription -->
        <% if (page === 'register') { %>
        <h2>Inscription</h2>
        <form action="/api/users/register" method="POST" class="form-container">
          <table>
            <tr>
              <td>
                <input type="text" name="last" placeholder="Nom" required class="input-field">
              </td>
              <td>
                <input type="text" name="first" placeholder="Prénom" required class="input-field">
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <input type="email" name="email" placeholder="Email" required class="input-field">
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <input
                  type="password"
                  name="password"
                  placeholder="Mot de passe"
                  required
                  class="input-field"
               >
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <select name="role" class="input-field">
                  <option value="organisateur">Organisateur</option>
                  <option value="participant">Participant</option>
                </select>
              </td>
            </tr>
          </table>
          <button type="submit" class="button">S'inscrire</button>
        </form>
        <% } %>

        <!-- Tableau de bord -->
        <% if (page === 'dashboard' && user) { %>
        <h1>Tableau de bord</h1>
        <p>Bienvenue, <%= user.email %> !</p>
        <p>Votre rôle : <%= user.role %></p>
        <a href="/logout" class="button">Déconnexion</a>
        <% } %>
      </div>
    </div>

    <!-- Tableau de bord -->
    <% if (page === 'dashboard' && user) { %>
    <h1>Tableau de bord</h1>
    <p>Bienvenue, <%= user.email %> !</p>
    <p>Votre rôle : <%= user.role %></p>
    <a href="/logout">Déconnexion</a>
    <% } %>
  </body>
</html>
